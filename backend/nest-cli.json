{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "schematics": {
    "controller": { "path": "src/modules" },
    "service": { "path": "src/modules" },
    "module": { "path": "src/modules" },
    "resource": { "path": "src/modules" },
    "guard": { "path": "src/common/guards" },
    "interceptor": { "path": "src/common/interceptors" },
    "pipe": { "path": "src/common/pipes" },
    "filter": { "path": "src/common/exceptions" },
    "decorator": { "path": "src/common/decorators" }
  },
  "compilerOptions": {
    "deleteOutDir": true
  }
}
